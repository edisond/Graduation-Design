                                        <br/>
                                        <table class="table table-bordered table-hover" id="table-teacher" width="100%">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>工号</th>
                                                    <th>姓名</th>
                                                    <th>性别</th>
                                                    <th>部门</th>
                                                    <th>职称</th>
                                                    <th>激活</th>
                                                    <th>操作</th>
                                                </tr>
                                            </thead>
                                        </table>
