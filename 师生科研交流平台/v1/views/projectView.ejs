                                                </div>
                                                <label for="input-lab" class="col-sm-2 control-label">所在实验室
                                                </label>
                                                <div class="col-sm-4">
                                                    <input type="text" class="form-control" id="input-lab" maxlength="10" required value="<%=project.openExperimentAttr.lab %>">
                                                </div>
                                            </div>
                                            <div class="form-group" data-role="selector">
                                                <label for="input-college" class="col-sm-2 control-label">所属学院</label>
                                                <div class="col-sm-4">
                                                    <select class="form-control" id="input-college" required data-bind="college" selectedItem="<%=project.college%>"></select>
                                                </div>
                                                <label for="input-object" class="col-sm-2 control-label">面向专业</label>
                                                <div class="col-sm-4">
                                                    <select class="form-control" id="input-object" required data-bind="major" selectedItem="<%=project.openExperimentAttr.object%>"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="input-capacity" class="col-sm-2 control-label">拟定参与学生数</label>
                                                <div class="col-sm-4">
                                                    <input type="number" class="form-control" id="input-capacity" min="1" max="9999" value="<%=project.openExperimentAttr.capacity %>">
                                                </div>
