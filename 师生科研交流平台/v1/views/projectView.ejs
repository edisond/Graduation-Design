                                    <a class="btn btn-block btn-default" href="#input-comment"><i class="fa fa-comments"></i>&nbsp;参与讨论</a>
                                    <hr/>
                                    <%}%>
                                        <h4 class="text-theme"><b>选课情况&nbsp;(
                                                <span id="project-selects-num">-</span>/
                                                <%=project.openExperimentAttr.capacity%>)

                                            </b></h4>
                                        <p id="project-selects" class="mt10">
                                            <span class="text-muted">加载中</span>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>所属学院</b></h4>
                                        <p>
                                            <%=project.college%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>面向专业</b></h4>
                                        <p>
                                            <%=project.openExperimentAttr.object%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>实验室</b></h4>
                                        <p>
                                            <%=project.openExperimentAttr.lab%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>项目来源</b></h4>
                                        <p>
                                            <%=project.openExperimentAttr.source%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>结题形式</b></h4>
                                        <p>
                                            <%=project.openExperimentAttr.result%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>开始时间</b></h4>
                                        <p>
                                            <%=project.dateStart%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>结束时间</b></h4>
                                        <p>
                                            <%=project.dateEnd%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>需要学时</b></h4>
                                        <p>
                                            <%=project.openExperimentAttr.effort%>
                                        </p>
                                        <br/>
                                        <h4 class="text-theme"><b>教师信息</b></h4>
                                        <p><i class="fa fa-street-view minw25"></i>
                                            <%=project.teacher.name%>
                                        </p>
                                        <p><i class="fa fa-institution minw25"></i>
                                            <%=project.teacher.department%>
                                        </p>
                                        <p><i class="fa fa-envelope minw25"></i>
                                            <a href="mailto:<%=project.teacher.email%>">
                                                <%=project.teacher.email%>
                                            </a>
                                        </p>
                                        <p><i class="fa fa-phone minw25"></i>
                                            <%=project.teacher.phone%>
                                        </p>
                                        <%} else if(project.type==='挑战杯项目' || project.type==='科技创新工程项目' ){ if(typeof user!=='undefined' ){%>
                                            <button type="button" class="btn btn-block btn-primary <%=user._id.toString()===project.creator._id.toString()?'':'dhidden'%>" id="btn-update-content" data-toggle="modal" data-target="#edit-project"><i class="fa fa-edit"></i>&nbsp;更新项目</button>
                                            <button type="button" class="btn btn-block btn-danger <%=user._id.toString()===project.creator._id.toString()?'':'dhidden'%>" data-toggle="modal" data-target="#delete-project"><i class="fa fa-trash"></i>&nbsp;删除项目</button>
                                            <button type="button" class="btn btn-block btn-success <%=(user.type==='老师'&&!project.teacher)?'':'dhidden'%>" id="btn-teacher-apply" data-toggle="modal" data-target="#guide-project"><i class="fa fa-child"></i>&nbsp;指导项目</button>
                                            <button type="button" class="btn btn-block btn-success <%=user.type==='同学'&&project.teacher&&!team?'':'dhidden'%>" id="btn-team-apply" data-toggle="modal" data-target="#select-team"><i class="fa fa-check"></i>&nbsp;加入项目</button>
                                            <a class="btn btn-block btn-default" href="#input-comment"><i class="fa fa-comments"></i>&nbsp;参与讨论</a>
                                            <hr/>
                                            <%}%>
                                                <h4 class="text-theme"><b>参与团队</b></h4>
                                                <%if(team){%>
                                                    <p>
                                                        <a target="_blank" href="/team/<%=team._id%>">
                                                            <%=team.name%>
                                                        </a>
                                                    </p>
                                                    <%} else {%>
                                                        <p>暂无团队</p>
                                                        <%}%>
                                                            <br/>
                                                            <h4 class="text-theme"><b>所属学院</b></h4>
                                                            <p>
                                                                <%=project.college%>
                                                            </p>
                                                            <br/>
                                                            <%if(project.type==='挑战杯项目' ){%>
                                                                <h4 class="text-theme"><b>项目类型</b></h4>
                                                                <p>
                                                                    <%=project.challengeCupAttr.ccType%>
                                                                </p>
                                                                <br/>
                                                                <%}%>
                                                                    <h4 class="text-theme"><b>开始时间</b></h4>
                                                                    <p>
                                                                        <%=project.dateStart%>
                                                                    </p>
                                                                    <br/>
                                                                    <h4 class="text-theme"><b>结束时间</b></h4>
                                                                    <p>
                                                                        <%=project.dateEnd%>
                                                                    </p>
                                                                    <br/>
                                                                    <h4 class="text-theme"><b>教师信息</b></h4>
                                                                    <%if(project.teacher){%>
                                                                        <p><i class="fa fa-street-view minw25"></i>
                                                                            <%=project.teacher.name%>
                                                                        </p>
                                                                        <p><i class="fa fa-institution minw25"></i>
                                                                            <%=project.teacher.department%>
                                                                        </p>
                                                                        <p><i class="fa fa-envelope minw25"></i>
                                                                            <a href="mailto:<%=project.teacher.email%>">
                                                                                <%=project.teacher.email%>
                                                                            </a>
                                                                        </p>
                                                                        <p><i class="fa fa-phone minw25"></i>
                                                                            <%=project.teacher.phone%>
                                                                        </p>
                                                                        <%} else {%>
                                                                            <p>暂无指导教师</p>
                                                                            <%}}%>
                            </div>
                        </div>
                    </div>
                </div>

                <%if(typeof user!=='undefined' ){%>
                    <%if(typeof project.teacher!=='undefined' && project.teacher._id.toString()===user._id.toString() && project.type==='开放实验项目' ){%>
                        <div class="modal fade" id="edit-project" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
