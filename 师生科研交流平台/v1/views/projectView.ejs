                            <input type="hidden" value="<%=project._id%>" id="input-project-id">
                            <input type="hidden" value="<%=project.type%>" id="input-project-type">
                            <p class="text-muted">
                                <%if(project.teacher){%>
                                    <i class="fa fa-street-view"></i>指导教师：&nbsp;
                                    <%=project.teacher.name%>
                                        <%} else {%>
                                            <i class="fa fa-street-view"></i>暂无导师
                                            <%}%>
                                                <i class="fa fa-clock-o ml20"></i>&nbsp;更新于
                                                <%=project.dateUpdate%>
                            </p>
                            <hr/>
                        </div>
                    </div>
                </div>
                <div class="container mt20">
                    <div class="row">
                        <div class="col-sm-9 col-xs-12">
